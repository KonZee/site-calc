.overlay
	pointer-events none
	position absolute
	z-index 1000
	opacity 0.5
	width 100%
	height 2000px
	left 0
	top 0
	@media screen and (max-width: 320px)
		background url(../images/overlay/mobile-calculator.jpg) no-repeat 0 0
		background url(../images/overlay/mobile-mainpage.jpg) no-repeat 0 0
		background url(../images/overlay/mobile-post.jpg) no-repeat 0 0
		background url(../images/overlay/mobile-posts.jpg) no-repeat 0 0
	@media screen and (min-width: 1920px)
		background url(../images/overlay/desktop-mainpage.jpg) no-repeat -8px 0
		background url(../images/overlay/desktop-posts.jpg) no-repeat -8px 0
		background url(../images/overlay/desktop-post.jpg) no-repeat -8px 0
		background url(../images/overlay/desktop-calculator.jpg) no-repeat -8px 0

body
	padding-bottom 80px
	background #f7f7f7

main
	padding 10px 0 0
	@media screen and (min-width: $screen-sm)
		padding 20px 0 0

aside
	padding-top 20px

.button
	display inline-block
	border-radius 4px
	padding 10px
	font-size 16px
	&:hover
		text-decoration none
.button--gray
	background #e8e8e8
	color #2a2a2a
	&:hover
		color #2a2a2a
.button--black
	background #2a2a2a
	color #fff
	&:hover
		color #fff
.button--full-width
	width 100%
	text-align center
.button--centered
	display table
	margin-left auto
	margin-right auto
.button--mobile-only
	@media screen and (min-width: $screen-sm)
		display none
.button--desktop-reset
	@media screen and (min-width: $screen-sm)
		display inline
		background none
		padding 0
		text-align left
		width auto
		margin 0