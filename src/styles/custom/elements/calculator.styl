.calculator
	margin-bottom 20px

	&__container
		width 100%
		background #e8e8e8
		border-radius 4px
		padding 28px 20px
		margin-bottom 20px
		@media screen and (min-width: $screen-sm)
			padding 18px 20px

	&__title
		margin-top 0
		margin-bottom 13px
		font-size 18px
		@media screen and (min-width: $screen-sm)
			font-size 28px

	&__body
		display flex
		flex-wrap wrap

	&__description
		display none
		font-size 16px
		line-height 30px
		@media screen and (min-width: $screen-sm)
			display block
		p
			margin-bottom 30px
			&:last-of-type
				margin-bottom 0

// Calculator elements
.calc-item
	padding 11px 19px
	border-radius 4px
	margin 5px
	width 100%
	display flex
	flex 1 1 auto
	flex-wrap wrap
	@media screen and (min-width: $screen-sm)
		height 40px
		width auto
		flex-wrap nowrap
	&--white
		background #fff
		color #8e8e8e
	&--small
		@media screen and (min-width: $screen-md)
			flex 1 0 25%

	&--medium
		@media screen and (min-width: $screen-md)
			flex 1 0 40%

	&__label
		flex 1 0 100%
		margin-bottom 5px
		@media screen and (min-width: $screen-sm)
			flex 0 0 auto
			margin-bottom 0

	&__textbox
		border-width 0 0 1px 0
		flex 1 0 auto
		@media screen and (min-width: $screen-sm)
			margin-left 15px
		&:focus
			color $yellow
			outline none
		&--white
			border-color #8e8e8e
			&:focus
				border-color $yellow
		&--numbers
			flex 1 0 auto

	&__radio,
	&__checkboxes
		display flex
		flex 0 0 auto
		max-width 100%
		flex-wrap wrap
		@media screen and (min-width: $screen-sm)
			flex-wrap nowrap
			margin-left 10px
		input
			display none
		label
			position relative
			font-weight normal
			padding-left 30px
			cursor pointer
			margin-right 10px
			@media screen and (min-width: $screen-sm)
				padding-left 40px
				margin-right 0
			&:before
				content ""
				display block
				position absolute
				top 1px
				left 0
				width 16px
				height 16px
				box-shadow inset 2px 2px 2px 0 #bbb
				@media screen and (min-width: $screen-sm)
					left 15px
		input:checked + label
			&:before
				box-shadow none
				background $yellow url("../images/check.svg") no-repeat 4px 5px
				background-size 8px 8px

	&__radio
		label:before
			border-radius 50%

	&__checkboxes
		label:before
			border-radius 4px

	&__select
		cursor pointer
		width 100%
		position relative
		//top -5px
		padding-right 30px
		margin-left 20px
		//height 30px
		border none
		border-radius 4px
		background transparent
		appearance none
		&:focus
			outline none
		select
			display none

	// js select
	&__select-placeholder
		display block
		@media screen and (min-width: $screen-sm)
			margin -11px -19px -5px
			padding 11px 19px

	&__select-options
		overflow-y hidden
		position relative
		z-index 1
		background #fff
		display none
		border-radius 0 0 4px 4px
		@media screen and (min-width: $screen-sm)
			margin 0 -29px 0 -19px
		ul
			list-style none
			padding 0
			margin 5px 0 0
			li
				padding 11px 19px

	// No-js select
	&__select-container
		flex 1 0 auto
		//overflow hidden
		margin-left -20px
		position relative
		&:after
			display block
			content ">"
			font-weight bold
			position absolute
			top 0
			right 10px
			pointer-events none
			transform rotate(90deg)



	&__submit
		margin 5px
		height 40px
		flex 0 0 auto

select::-ms-expand
	display none