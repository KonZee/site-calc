.recommended
	position relative

.recommended__title
	font-size 18px
	margin 19px 0 22px
	@media screen and (min-width: $screen-md)
		font-size 29px
		margin 34px 0 20px

.recommended__show-all
	font-size 14px
	@media screen and (min-width: $screen-sm)
		position absolute
		right 0
		top 2px
		color #a1a1a1
		font-size 16px
	@media screen and (min-width: $screen-md)
		top 7px
		font-size 17px