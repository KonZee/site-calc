.block
	display block
	width 250px
	border-radius 4px
	margin-bottom 20px
	height 250px
	position relative
	@media screen and (max-width: $screen-xs-max)
		display table
		margin-left auto
		margin-right auto


// Calc link block section
.block-calc
	background-position center center
	color #fff
	position relative
	height 125px
	overflow hidden
	@media screen and (min-width: $screen-sm)
		height 250px
	&__image
		position absolute
		left 0
		top 0
		right 0
		bottom 0
		&::after
			display block
			position absolute
			content ""
			left 0
			top 0
			right 0
			bottom 0
			background black
			opacity 0.3
			transition opacity 350ms
	&__text-layer
		display block
		position absolute
		left 50%
		top 50%
		transform translate(-50%,-50%)
		color #fff
		font-size 25px
		width 100%
		max-height 250px
		transition color 350ms
	&__arrow
		max-height 0
		overflow-y hidden
		transition max-height 350ms
		svg
			width 33px
			height 45px
			fill #fff
			transition fill 350ms
	&:hover
		.block-calc
			&__image::after
				opacity 0.6
			&__text-layer
				color $yellow
			&__arrow
				@media screen and (min-width: $screen-sm)
					max-height 45px
				svg
					fill $yellow

// Blog block section
.block--blog-posts
	background #efeeee
	padding 10px 0 0
	overflow hidden

.block-blog
	display block
	color #262626
	padding 9px 15px
	background transparent
	transition background 350ms
	&:hover
		background #e2e2e2
.block-blog__image
	width 45px
	height 45px
	border-radius 4px
	float left
	margin-right 15px
.block-blog__text
	position relative
	margin-left 60px
.block-blog__title
	font-size 14px
	font-weight bold
.block-blog__lead
	font-size 10px

.block__blog-all
	height 36px
	background #7b7b7b
	text-align center
	position absolute
	left 0
	right 0
	bottom 0
	border-radius 0 0 4px 4px
	font-size 14px
	a
		padding-top 8px
		display block
		color #fff
		width 100%
		height inherit
	&::before
		display block
		content ""
		width inherit
		height 10px
		position absolute
		width 100%
		bottom 36px
		background linear-gradient(to bottom, rgba(239,238,238,0) 0%,rgba(239,238,238,1) 100%)

// Context media
.block--context
	background $yellow // Temp line

.block--context-wide
	display table
	margin 0 auto 11px
	background $yellow // Temp line
	width 750px
	height 100px