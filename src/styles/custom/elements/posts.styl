.post-link
	display block
	width 250px
	margin-bottom 20px
	background #fff
	border-radius 4px
	position relative
	overflow hidden
	&:hover
		text-decoration none
	@media screen and (max-width: $screen-xs-max)
		display table
		margin-left auto
		margin-right auto
	@media screen and (min-width: $screen-sm)
		height 344px

	&__image
		width 38px
		height 38px
		float left
		margin 12px 10px 12px 12px
		@media screen and (min-width: $screen-sm)
			float none
			width 100%
			height auto
			border-radius 4px 4px 0 0
			margin 0
		img
			width 100%
			max-width 100%
			border-radius 4px

	&__title
		font-size 18px
		line-height 20px
		font-weight normal
		color #181818
		margin 10px 12px 0 60px
		min-height 50px
		@media screen and (min-width: $screen-sm)
			margin 11px 0 0 0
			line-height 30px
			padding 0 15px
			min-height 0
			font-size 16px

	&__text
		padding 0 15px
		color #7c7c7c
		font-size 14px
		line-height 20px
		clear both
		border-top 1px #e7e7e7 solid
		@media screen and (min-width: $screen-sm)
			font-size 16px
			line-height 24px
			border-top none
			padding 2px 15px 0

	&__more
		position relative
		color #bebebe
		font-size 0
		height 30px
		&:after
			display block
			content ">"
			position absolute
			color #fff
			font-size 13px
			padding 2px 7px
			background #9d9d9d
			width 20px
			height 20px
			border-radius 50%
			right 10px
			bottom 10px

		@media screen and (min-width: $screen-sm)
			position absolute
			background #fff
			text-align center
			height 40px
			padding-top 10px
			font-size 15px
			left 0
			right 0
			bottom 0
			border-top 1px solid #e3e3e3
			&:before
				display block
				content ""
				width inherit
				height 20px
				position absolute
				width 100%
				bottom 40px
				background linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 80%)
			&:after
				display none
